// Footer Area
footer.footer-area
    .container
        .copywrite-wrapper.mt-5.rounded.d-lg-flex.align-items-lg-center.justify-content-lg-between
            // Copywrite Text 
            .copywrite-text.text-center.text-lg-start.mb-3.mb-lg-0.me-lg-4
                p.mb-0
                    | 2021 &copy; All rights reserved by 
                    a(href="#", target="_blank") Designing World

            // Footer Nav 
            .footer-nav.mb-3.mb-lg-0.me-lg-4
                ul.mb-0.d-flex.flex-wrap.justify-content-center.list-unstyled
                    li
                        a(href="#" target="_blank") Privacy Policy
                    li
                        a(href="#" target="_blank") Terms &amp; Conditions
                    li
                        a(href="#" target="_blank") Get Support

            // Dropup 
            .language-dropdown.text-center.text-lg-end
                button.btn.dropdown-toggle(type="button", data-bs-toggle="dropdown", aria-expanded="false") Language

                .dropdown-menu.dropdown-menu-end
                    a.dropdown-item(href="#")
                        span.me-2.flag-icon.flag-icon-sa
                        | Arabic
                    a.dropdown-item(href="#")
                        span.me-2.flag-icon.flag-icon-bd
                        | Bengali
                    a.dropdown-item(href="#")
                        span.me-2.flag-icon.flag-icon-us
                        | English
                    a.dropdown-item(href="#")
                        span.me-2.flag-icon.flag-icon-my
                        | Malay
                    a.dropdown-item(href="#")
                        span.me-2.flag-icon.flag-icon-es
                        | Spanish

