doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/header-2.pug

        // Breadcrumb Area
        .breadcrumb-wrapper.breadcrumb-bg-light
            .container.h-100
                .row.h-100.align-items-center
                    .col-12
                        .breadcrumb-content
                            h2.breadcrumb-title Contact Us
                            nav(aria-label="breadcrumb")
                                ol.breadcrumb.justify-content-center
                                    li.breadcrumb-item
                                        a(href="index.html") Home
                                    li.breadcrumb-item.active(aria-current="page") Contact Us

        .mb-120.d-block

        // Contact Area
        .saasbox-contact-us-area
            .container                        
                .row.g-4.justify-content-between
                    // Contact Side Info
                    .col-12.col-lg-5.col-xl-4
                        .contact-side-info.mb-4.mb-md-0
                            h1.mb-3 Let's talk about <br> all things!
                            p.mb-4 Write to us or give us a call. We will reply to you as soon as possible. But yes, it can take up to 24 hours.
                            
                            .contact-mini-card-wrapper
                                // Contact Mini Card
                                .contact-mini-card
                                    .contact-mini-card-icon
                                        i.bi.bi-envelope
                                    p example@domain.com

                                // Contact Mini Card
                                .contact-mini-card
                                    .contact-mini-card-icon
                                        i.bi.bi-headphones
                                    p (+880) 145 2635896

                                // Contact Mini Card
                                .contact-mini-card
                                    .contact-mini-card-icon
                                        i.bi.bi-tag
                                    p We are open from 9am â€” 5pm business days.

                    // Contact Form
                    .col-12.col-lg-7
                        .contact-form
                            form(action="#" method="POST")
                                .row
                                    .col-12.col-lg-6
                                        label.form-label(for="name") Full Name:
                                        input.form-control.mb-30#name(type="text", placeholder="Designing World", value="", name="name", required)

                                    .col-12.col-lg-6
                                        label.form-label(for="email") Email Address:
                                        input.form-control.mb-30#email(type="email", placeholder="care.designingworld@gmail.com", name="email", value="", required)

                                    .col-12
                                        label.form-label(for="subject") Topics:
                                        input.form-control.mb-30#topics(type="text", placeholder="Presale Questions", name="topics", value="")

                                    .col-12
                                        label.form-label(for="message") Message:
                                        textarea.form-control.mb-30#message(name="message", placeholder="Message")

                                    .col-12.text-center
                                        button.btn.btn-primary.w-100(type="submit") Send Now

        .mb-120.d-block

        // Google Maps
        .google-maps-wrapper
            iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14047.882048906753!2d-0.14268817855593444!3d51.50701170390822!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon%2C%20UK!5e0!3m2!1sen!2sbd!4v1570696571917!5m2!1sen!2sbd" allowfullscreen="")

        .mb-120.d-block

        include inc/footer-1.pug

        .mb-120.d-block

        include inc/js-plugins.pug