doctype html
html(lang="en")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/header-2.pug

        // Breadcrumb Area
        .breadcrumb-wrapper.breadcrumb-bg-light
            .container.h-100
                .row.h-100.align-items-center
                    .col-12
                        .breadcrumb-content
                            h2.breadcrumb-title Product Details
                            nav(aria-label="breadcrumb")
                                ol.breadcrumb.justify-content-center
                                    li.breadcrumb-item
                                        a(href="index.html") Home
                                    li.breadcrumb-item.active(aria-current="page") Shop

        .mb-120.d-block

        // Product Details Area
        .product-details-area.product-details-page
            .container
                .row.g-4.g-lg-5.justify-content-center
                    .col-12.col-md-9.col-lg-6
                        .mb-3.mb-sm-5.position-relative.product-details-carousel-wrap
                            // Carousel 
                            .product-details-carousel.portfolio-img-zoom
                                // Carousel Item 
                                a.rounded(href="img/bg-img/shop1.jpg" title="Item Image 1")
                                    img.rounded(src="img/bg-img/shop1.jpg" alt="")

                                // Carousel Item 
                                a.rounded(href="img/bg-img/shop2.jpg" title="Item Image 2")
                                    img.rounded(src="img/bg-img/shop2.jpg" alt="")

                                // Carousel Item 
                                a.rounded(href="img/bg-img/shop3.jpg" title="Item Image 3")
                                    img.rounded(src="img/bg-img/shop3.jpg" alt="")

                                // Carousel Item 
                                a.rounded(href="img/bg-img/shop4.jpg" title="Item Image 4")
                                    img.rounded(src="img/bg-img/shop4.jpg" alt="")

                                // Carousel Item 
                                a.rounded(href="img/bg-img/shop5.jpg" title="Item Image 5")
                                    img.rounded(src="img/bg-img/shop5.jpg" alt="")

                                // Carousel Item 
                                a.rounded(href="img/bg-img/shop6.jpg" title="Item Image 6")
                                    img.rounded(src="img/bg-img/shop6.jpg" alt="")

                    // Product Description
                    .col-12.col-md-9.col-lg-6
                        .card.product-description-card.mb-4.mb-sm-5
                            h6.product-meta-title.mb-0.ps-5.py-4 About Product
                            .card-body.p-3.p-sm-5
                                h4.mb-3 Bonsai Tree
                                h3.product-price.mb-4 $19.23
                                    span $32.89
                                h6.mb-4 36 Product Left                            
                                p It's crafted with the latest trend of design &amp; coded with all modern approaches. It's a robust &amp; multi-dimensional usable template. It's crafted with the latest trend of design &amp; coded with all modern approaches.

                                form.d-flex.align-items-end.mt-4(action="#")
                                    .form-group.mb-0
                                        label.me-2.mb-2(for="totalQuantity") Quantity
                                        input.form-control#totalQuantity(type="number" min="1" max="12" name="quantity" value="1")

                                    button.btn.btn-primary.ms-3(type="submit") Buy Now

                // Product Review 
                .card.product-review-card
                    h6.product-meta-title.mb-0.ps-5.py-4 Product Reviews
                    .card-body.p-3.p-sm-5.text-center
                        ul.ratings-list.d-flex.align-items-center.justify-content-center.mb-0.list-unstyled
                            li.active
                                i.bi.bi-star
                            li.active
                                i.bi.bi-star
                            li.active
                                i.bi.bi-star
                            li.active
                                i.bi.bi-star
                            li.active
                                i.bi.bi-star
                        span 4.89 out of 5.00 (203 reviews)

        .mb-120.d-block

        include inc/cta-3.pug

        .mb-120.d-block

        include inc/footer-1.pug

        .mb-120.d-block

        include inc/js-plugins.pug